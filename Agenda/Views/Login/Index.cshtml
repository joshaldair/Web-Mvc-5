@model  Agenda.Models.usuarios

@{
    if (Session["userID"] != null)
    {
        Response.Redirect("~/Dashboard/Index");
    }
}


<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Login - Central aplicaciones Ujueta</title>
    <script>
        (function () {
            'use strict';
            document.documentElement.style.display = 'block';
        }());</script>

    <meta name="msapplication-TileColor" content="#faa41a" />
    <meta name="theme-color" content="#ffffff" />

    <script>
        WebFontConfig = {
            google: { families: ['Open+Sans:300,400,400italic,600,600italic,700,700italic'] },
            custom: {
                families: [
                    'FontAwesome'
                ],
                urls: [
                    'Content/font-awesome.min.css'
                ]
            }
        };
        (function (d) {
            var wf = d.createElement('script'), s = d.scripts[0];
            wf.src = 'https://ajax.googleapis.com/ajax/libs/webfont/1.5.10/webfont.js';
            s.parentNode.insertBefore(wf, s);
        })(document);
    </script>
    <link href="~/Content/main.min.css" rel="stylesheet" />
    <script data-semver="2.0.3" src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
     <script data-require="bootstrap@3.1.1" data-semver="3.1.1" src="http://netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

    <script src="~/Plugins/SweetAlert/sweetalert.js"></script>

</head>
<body class="bg-login">
    <div id="page-container">
        <div class="login">
           
            <div class="loginform bg-lightgrey p-x-2 p-y-2">
                <h1 class="h2 text-xs-center">Bienvenido otra vez!</h1>
                <div id="pnMensaje" runat="server"></div>
                @using (Html.BeginForm("Autherize", "Login", FormMethod.Post))
                {
                    <div class="control-group">
                        <label class="light" for="email">Usuario</label>
                        @Html.TextBoxFor(model => model.usuario, new { placeholder = "Usuario", @class = "form-control", required = "required" })
                    </div>
                    <div class="control-group p-b-2">
                        <label class="light" for="password">Password</label>
                        @Html.PasswordFor(model => model.clave, new { placeholder = "Contraseña", @class = "form-control", required = "required" })
                    </div>
                    <div class="control-group">
                        <input type="submit" value="Ingresar" class="btn btn-primary btn-lg btn-block">

                    </div>
                }
            </div>
            <div class="row text-xs-center m-t-2">
                <div class="col-xs-12 col-md-12"><a class="link-orange" href="#">Se te olvidó tu contraseña?</a></div>
            </div>
        </div>
    </div>
    <script>
   //resto del script si lo hay
          @if(ViewBag.Message != ""){
             @:sweetAlert("Error!!", "Usuario y Contraseña no son correctos", "error");
          }
    </script>
</body>
</html>


